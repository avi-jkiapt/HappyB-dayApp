<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avinashkumaryadav.avinash.Menu1">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtvi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:text="Happy Birthday To You" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happimg"
android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/round_outline"

        android:src="@drawable/avina"
        android:layout_below="@+id/txtvi"/>

    <ImageButton
        android:layout_below="@id/happimg"
        android:id="@+id/btnplay"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:layout_width="72dp"
        android:layout_height="72dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap button to play/pause"
        android:textSize="28dp"
        android:fontFamily="cursive"
        android:layout_below="@id/happimg"
        android:id="@+id/rightbtn"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/btnplay"/>
</RelativeLayout>
    </ScrollView>
</FrameLayout>
