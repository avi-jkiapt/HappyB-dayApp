<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.avinashkumaryadav.avinash.Developermenu">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="4dp"
       android:paddingRight="@dimen/horizontalpadd"
       android:paddingLeft="@dimen/horizontalpadd">



       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_width="wrap_content"

           android:layout_centerHorizontal="true"
           android:id="@+id/asdd"
           android:layout_height="wrap_content"
           android:src="@drawable/avina"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Avinash Kumar Yadav"
           android:layout_below="@id/asdd"
           android:textSize="24sp"
           android:id="@+id/name"
           android:paddingLeft="8sp"
           android:paddingBottom="16dp"
           android:textStyle="italic"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/name"
           android:textSize="32sp"
           android:textColor="@color/colorAccent"
           android:textStyle="bold"
           android:text="Contact Me:-"
           android:id="@+id/hari"
           android:paddingBottom="8dp"
           />
       <TextView
           android:layout_below="@id/hari"
           android:textSize="24sp"
           android:id="@+id/hjk"
           android:fontFamily="cursive"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/mans"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="cursive"
           android:layout_below="@id/hjk"
           android:textSize="24sp"
           android:text="https://www.linkedin.com/in/avinash-kumar-yadav-3b16b112b/"/>
   </RelativeLayout>
</ScrollView>
</FrameLayout>
